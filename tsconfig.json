{
    "include": [
        "resources/typescript/**/*"
    ],
    "compilerOptions": {
        "outDir": "obj",
        "rootDir": "resources/typescript",
        "paths": {
            "@martin-pettersson/sorting-algorithms": [
                "resources/typescript/index.js"
            ],
            "@martin-pettersson/sorting-algorithms/*": [
                "resources/typescript/*"
            ]
        },
        "composite": true,
        "declaration": true,
        "target": "esnext",
        "module": "nodenext",
        "resolveJsonModule": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "useUnknownInCatchVariables": false,
        "experimentalDecorators": true,
        "moduleResolution": "nodenext",
        "baseUrl": ".",
        "esModuleInterop": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        "obj"
    ]
}
